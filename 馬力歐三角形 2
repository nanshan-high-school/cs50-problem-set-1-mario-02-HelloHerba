#include <iostream>
using namespace std;
int main() {
  int i,j,k,e,height;
  cout<<"請輸入高度:";
  cin>>height;
  if(0<height<9){
    for(i=0;i<height+1;i++)
    {
      for(k=height;k>i;k--)
      {
        cout<<" ";
      }
      for(j=0;j<i;j++)
      {
        cout<<"#";
      }
      cout<<"\t";
      for(e=0;e<i;e++)
      {
        cout<<"#";
      }
      cout<<"\n";
    }
  }
  else{cout<<"數值超出範圍";}
}
